            <column name="vendu" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="quantite_par_piece" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="unite" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="prix_par_unite" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="description" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="remarques_internes" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <column name="fournisseur" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="ref_fournisseur" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="stock" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="commandes_clients" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="derniere_verification_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="derniere_livraison_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="achat_fournisseur" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="dernier_achat_date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="dernier_achat_quantite" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="stats_livraison" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="stats_perte" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="stats_vente" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="stats_vente_speciale" type="${floatType}">
                <constraints nullable="true" />
            </column>
            <column name="tags" type="${clobType}">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="produit" columnName="created_date" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="produit" columnName="last_updated_date" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="produit" columnName="imported_date" columnDataType="${datetimeType}"/>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->

    <!--
